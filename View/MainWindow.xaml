<Window x:Class="View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:View"
        mc:Ignorable="d"
        Title="MainWindow" 
        Height="450" Width="600"
        MinHeight="450" MinWidth="600"
        Background="#7c7c7c">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="600*"/>
            <ColumnDefinition Width="150"/>
        </Grid.ColumnDefinitions>
        
        <Rectangle Margin="3" Grid.Column="0" Grid.Row="0" Fill="#1a1a1a" Stroke="#eff9f0" StrokeThickness="2"/>
        
        <Label Grid.Column="1" Content="Ilość kulek:" HorizontalAlignment="Stretch" Margin="7,10,0,0" VerticalAlignment="Top" Foreground="#eff9f0"/>
        <TextBox Grid.Column="1" Margin="10,35,10,0" VerticalAlignment="Top" HorizontalAlignment="Stretch" Text="10"/>

        <Button Grid.Column="1" Content="Start" HorizontalAlignment="Left" Margin="10,58,0,0" VerticalAlignment="Top" Width="62" IsEnabled="True"/>
        <Button Grid.Column="1" Content="Stop" HorizontalAlignment="Right" Margin="75,58,10,0" VerticalAlignment="Top" Width="62" IsEnabled="False"/>
        
    </Grid>
</Window>
